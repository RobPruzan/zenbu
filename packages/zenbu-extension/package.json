{
  "name": "zenbu-extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "test-ai",
          "title": "Test AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "test-ai": [
        {
          "type": "webview",
          "id": "test-ai.webview",
          "name": "Test AI"
        }
      ]
    },
    "commands": [
      {
        "command": "test-ai.openWebview",
        "title": "Open Test AI"
      },
      {
        "command": "test-ai.openInPanel",
        "title": "Open Vibe Code in Editor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build-webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "dev": "concurrently \"npm run watch\" \"npm run watch-webview-custom\" \"NODE_ENV=development npm run open-cursor\"",
    "watch-webview": "NODE_ENV=development vite build --mode development",
    "watch-webview-custom": "node scripts/watch-webview.js",
    "build-webview": "vite build --mode production && node scripts/post-build.js",
    "open-cursor": "cursor --extensionDevelopmentPath=$PWD",
    "open-vscode": "code --extensionDevelopmentPath=$PWD"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "16.x",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vscode/test-electron": "^2.2.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.28.0",
    "postcss": "^8.5.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "style-loader": "^3.3.1",
    "tailwindcss": "^4.1.8",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.3",
    "vite": "^6.3.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
