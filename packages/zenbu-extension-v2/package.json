{
  "name": "zenbu-extension-v2",
  "displayName": "Zenbu Extension V2",
  "description": "Zenbu Tools VSCode Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zenbu-sidebar",
          "title": "Zenbu",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "zenbu-sidebar": [
        {
          "type": "webview",
          "id": "zenbu.sidebar",
          "name": "Zenbu Tools"
        }
      ]
    },
    "commands": [
      {
        "command": "zenbu.openSidebar",
        "title": "Open Zenbu Sidebar"
      },
      {
        "command": "zenbu.openInEditor",
        "title": "Open Zenbu in Editor"
      }
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:extension\" \"npm run dev:webview\" \"npm run dev:cursor\"",
    "dev:extension": "NODE_ENV=development tsup --watch",
    "dev:webview": "vite",
    "dev:cursor": "NODE_ENV=development cursor --extensionDevelopmentPath=$PWD",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "tsup",
    "build:webview": "vite build",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "postcss": "^8.5.4",
    "react": "0.0.0-experimental-f7396427-20250501",
    "react-dom": "0.0.0-experimental-f7396427-20250501",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.1",
    "typescript": "^5.5.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.1",
    "@tanstack/react-query": "^5.50.0",
    "@trpc/client": "^11.0.0-rc.446",
    "@trpc/react-query": "^11.0.0-rc.446",
    "birpc": "^2.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "superjson": "^2.2.1",
    "tailwind-merge": "^2.5.5",
    "use-zustand": "^0.2.0",
    "zenbu-app": "workspace:*",
    "zustand": "^5.0.3"
  }
}
