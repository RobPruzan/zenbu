{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "paths": {
      "src/lib/trpc": ["./webview/shims/trpc-shim"],
      "@/*": ["./webview/*"],
      "~/*": ["../zenbu-app/src/*"],
      "zenbu-app/*": ["../zenbu-app/*"],
      "src/*": ["../zenbu-app/src/*"]
    },
    "types": ["react/experimental"]
  },
  "include": ["src/**/*", "webview/**/*"],
  "exclude": ["node_modules", "dist"]
}
